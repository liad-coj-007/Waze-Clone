{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug HashTable",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main",   // הנתיב ל־executable שלך
            "args": [],                                  // ארגומנטים אם יש
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
